@model EntityLayer.Concrete.Reservationn
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.v, "Bir destinasyon seçin", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="PersonCount" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="RezervasyonDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Varsa Eklemek istedikleriniz")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button class="btn btn-outline-success">Rezervasyon Yap</button>
</form>


