@model TraversalCoreProje.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Profil Düzenleme";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" asp-for="name" class="form-control" id="exampleInputName1" placeholder="ad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyadınız</label>
                    <input type="text" asp-for="surname" class="form-control" id="exampleInputName1" placeholder="soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresiniz</label>
                    <input type="text" asp-for="email" class="form-control" id="exampleInputName1" placeholder="mail">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz</label>
                    <input type="password" asp-for="password" class="form-control" id="exampleInputName1" placeholder="Şifreniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar</label>
                    <input type="password" asp-for="confirmpassword" class="form-control" id="exampleInputName1" placeholder="Şifre Tekrar">
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Image">
                    @*<div class="input-group col-xs-12">
                    <input type="text" class="form-control file-upload-info" disabled placeholder="Resim yükleyin">
                    <span class="input-group-append">
                    <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                    </span>
                    </div>*@
                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
